/*******************************************************
GENERAL
********************************************************/

body{ position: relative; font-family: 'Roboto', 'sans-serif'; overflow-x: hidden !important; min-height: 100vh; }
h1{ font-size: 30px; }
.violet{ color: #4a0087; }
.site_content{ transition-duration: 0.5s; }

/*******************************************************
NAVBAR
********************************************************/

.main_navbar{ background: #000 !important; }
  .main_navbar a{ color: #FFF; padding-left: 15px; }
  .main_navbar form{ display: none; width: 80%; margin: 0 auto; }
  .main_navbar input{ width: 80% !important; background: none; border: none; border-radius: 0; border-bottom: 2px solid #4a0087; }
  .main_navbar input:focus{ background: none; }
  .main_navbar button{ border: none; color: #FFF; }
  .main_navbar button:hover{ color: #4a0087; background: none; transition-duration: 0.3s; }

  .open{ cursor: pointer; }
  .bar1, .bar2, .bar3{ width: 25px; height: 2px; background: #FFF; margin: 6px 0; transition: 0.4s; }
  .change .bar1{ transform: rotate(-45deg) translate(-4px, 4px); }
  .change .bar2{ transform: translateX(-200%); }
  .change .bar3{ transform: rotate(45deg) translate(-7px, -7px); }

.hide_navbar{ overflow-y: scroll; transform: translateX(-100%); transition-duration: 0.5s; width: 20%; position: absolute; left: 0; bottom: 0; top: 56px; background: #000; z-index: 200000; padding: 20px; }
  .hide_navbar .nav_item{ padding: 10px; text-align: center; }
  .hide_navbar .nav_item i{ display: inline-block; width: 20%; color: #FFF; }
  .hide_navbar .nav_item a{ display: inline-block; width: 79%; color: #FFF; }
  .hide_navbar .nav_item a:hover{ text-decoration: none; }
  .hide_navbar .btn{ margin-top: 20px; display: block; border-radius: 0; border: none; background: #4a0087; }
  .hide_navbar .btn i{ margin-right: 10px; }
  .hide_navbar .separator{ border-top: 1px solid #FFF; margin: 20px 0; }

.opened{ transform: translateX(0); transition-duration: 0.5s; }
.with_sidebar{ transform: translateX(20%); transition-duration: 0.5s; }

.search{ display: none; }

/*******************************************************
HOME
********************************************************/

.lv_container{ position: relative; }
  .lv_infos{ mix-blend-mode: screen; position: absolute; color: #FFF; background-image: -moz-linear-gradient(left, rgba(0, 0, 0, 0.041) 0%, rgba(0, 0, 0, 0.212) 30%, rgba(0, 0, 0, 0.493) 60%, #000 100%); background-image: linear-gradient(left, rgba(0, 0, 0, 0.041) 0%, rgba(0, 0, 0, 0.212) 30%, rgba(0, 0, 0, 0.493) 60%, #000 100%); top: 10px; bottom: 10px; right: 0; width: 50%; padding: 20px; text-align: center; }
  .lv_infos h2{ font-size: 70px; text-transform: uppercase; border-bottom: 2px solid #4a0087; }
  .lv_infos p{ font-size: 80px; font-weight: 900; }
  .lv_infos a{ width: 30%; margin-top: 20px; border-radius: 0; border: none; background: #4a0087; padding: 10px; }
  .lv_infos a:hover{ background: #3c016d; }
  .lv_infos a i{ margin-right: 10px; }

  .lv_infos_content{ padding: 10px; position: absolute; top: 10%; }

.parallax{ position: relative; height: 500px; background: url('../images/bg.jpg'); background-repeat: no-repeat; background-size: cover; background-attachment: fixed; }
.parallax_text { position: absolute; left: 0; top: 50%; width: 100%; text-align: center; color: #000; }
.parallax_text span { background-color: #111; color: #fff; padding: 18px; font-size: 25px; letter-spacing: 10px; text-transform: uppercase; mix-blend-mode: screen; }

.list_videos{ text-align: center; }
  .elmt_video{ float: left; width: 49.99%; position: relative; }
  .elmt_video .v_infos{ position: absolute; background: rgba(0, 0, 0, 0.342); bottom: 0; width: 100%; margin-bottom: 10px; padding: 10px; text-align: left; }
  .elmt_video .v_infos h2{ background: #FFF; padding: 10px; font-size: 15px; font-weight: 800; mix-blend-mode: screen; text-transform: uppercase; }
  .elmt_video .v_infos p{ margin: 5px 0; color: #FFF; text-align: center; padding: 5px; text-transform: uppercase; }
  .elmt_video .v_infos .text-muted{ display: block; margin: 0 auto; color: #FFF !important; width: 50px; height: 50px; border-radius: 50px; text-align: center; line-height: 50px; }
  .free{ background: #078823 !important; }
  .price{ background: #2900bd !important; }
  .elmt_video .v_infos .v_text{ float: left; }
  .elmt_video .v_infos a{ background: #343a4052; width: 25%; border: 0; border-radius: 10px; float: right; }
  .elmt_video .v_infos a:hover{ background-image:linear-gradient(60deg, #8a48c0, #4a0087); }
  .elmt_video .v_infos .btn-danger{ background-image:linear-gradient(60deg, #c42f4d, #ad0628); }
  .elmt_video .v_infos .btn-danger:hover{ background-image:linear-gradient(60deg, #bd2d49, #91021f); }

.video{ width: 100%; background: #000; position: relative; padding-bottom: 56.25%; padding-top: 25px; height: 0; }
  .video img, .video iframe{ transition-duration: 0.5s; position: absolute; top: 0; left: 0; padding-top: 10px; padding-bottom: 10px; width: 100%; height: 100%; }
  .video img:nth-child(odd) .test{ transform: translateX(-50%); transition-duration: 0.5s; }
  .video img:nth-child(even) .test{ transform: translateX(50%); transition-duration: 0.5s; }

.badge i{ margin-left: 5px; }

.success_connect{ position: absolute; width: 50%; left: 25%; z-index: 50000000; transition-duration: 1s; }

.abo_home{ text-align: center;}
  .abo_home .elmt_abo{ width: 32.99%; }

/*******************************************************
VIDEO
********************************************************/
.aff_video{ background: #000; padding: 20px; }

.my_video{ width: 70%; margin: 0 auto; color: #FFF; }
  .my_video iframe{ border: none; }
  .my_video .v_infos h2{ font-size: 20px; display: inline-block; width: 90%; }
  .my_video .v_infos button{ display: inline-block; width: 9%; }
  .my_video .fb-share-button{ background: #3b5998; border: none; border-radius: 0; }
  .my_video .fb-share-button i{ margin-right: 10px; }

.commentaires{ width: 70%; margin: 0 auto; color: #FFF; }
  .commentaires h3{ padding-bottom: 10px; font-size: 17px; margin-top: 20px; }
  .commentaires .form-control{ font-size: 15px; background: none !important; border: none; border-radius: 0; border-bottom: 2px solid #4a0087 !important; margin: 20px 0; min-height: 30px !important; resize: none; }
  .commentaires .form-control:focus{ color: #FFF !important; }
  .commentaires button{ margin-bottom: 10px; float: right; border-radius: 0; background: #4a0087; border: none; visibility: hidden; }
  .commentaires button:hover{ background: #360063; border: none; }
  .commentaires button i{ margin-left: 5px; }
  .commentaires .alert{ clear: both; margin: 0 !important; }
  .commentaire{ clear: both; width: 70%; margin-top: 5px; padding: 10px; }
  .commentaire img{ display: inline-block; vertical-align: top; width: 70px; height: 70px; border-radius: 70px; border: 1px solid #000; }
  .commentaire .c_infos{ padding-left: 20px; width: 80%; display: inline-block; vertical-align: middle; text-align: left; }
  .commentaire p{ font-size: 12px; }
  .commentaire span{ margin-left: 10px; }

/*******************************************************
ABONNEMENTS
********************************************************/

  .abo_header{ background: url('../images/bg2.jpg'); background-size: cover;  background-repeat: no-repeat; color: #FFF; }
  .abo_infos{ background: #0000009f; padding: 20px; }
  .abo_infos p{ width: 50%; }
  .abo_content .container{ padding: 20px; }
  .abo_content .container ul{ text-align: left; }
  .abo_content .elmt_abo{ width: 50%; }

/*******************************************************
PROFIL
********************************************************/

.profil{ padding: 50px; }

.profil_pic{ text-align: center; }
  .profil_pic img{ width: 350px; height: 350px; border-radius: 350px; border: 1px solid #808080; }
  .profil_pic h1{ font-size: 25px; font-weight: 800; }

.profil_infos{ width: 50%; }
  .profil_infos button{ margin-bottom: 20px; }

/*******************************************************
COMMANDE
********************************************************/

.commande{ padding: 20px; width: 70%; margin: 0 auto; }
.commande tr td{ width: 25%; vertical-align: middle; }
/*.commande .total{ background: #000; color: #FFF; width: 25%; float: right; padding: 10px; }*/
.commande img{ width: 100%; }
.commande .btn_paypal{ width: 30%; float: right; }
#success_payment, #error_payment{ display: none; }

/*******************************************************
ACHATS
********************************************************/

.achats{ padding: 20px; width: 70%; margin: 0 auto; }
.achats tr td{ width: 25%; vertical-align: middle; }
.achats .total{ background: #000; color: #FFF; width: 25%; float: right; padding: 10px; }
.achats img{ width: 100%; }

/*******************************************************
CONNEXION/INSCRIPTION
********************************************************/

.login_body{ min-height: 100vh; margin-top: 0; background: url('../images/bg.jpeg'); background-size: cover; background-repeat: no-repeat; background-position: center; background-attachment: fixed; }
.login_body h1, .login_body h2{ text-align: center; }
.login_body h3{ border-bottom: 2px solid #4a0087; margin-bottom: 20px; padding-bottom: 10px; }
.login_body .alert{ width: 50%; margin: 0 auto; }
.login_body .alert i{ margin-right: 10px; }

.sign{ width: 70%; margin: 0 auto; background: #ffffffa9; min-height: 100vh; }
.sign .btn{ width: 100%; margin: 10px 0; display: block; border: 0; font-weight: 600; text-transform: uppercase; }  

.sign_in{ padding: 20px; }
  .sign_in .form-check{ text-align: center; }
  .sign_in button{ background: #4a0087; }
  .sign_in button:hover{ background: #360063; }
  .sign_in form, .sign_up form{ width: 50%; margin: 0 auto; }
  .sign_in .input-group, .sign_up .input-group{ margin-bottom: 20px !important; }
  .sign_in .input-group input, .sign_up .input-group input{ background: none; border-bottom: 1px solid #4a0087 !important; border: 0; border-radius: 0 !important; }
  .sign_in .input-group-text, .sign_up .input-group-text{ background: none !important; color: #4a0087; border: 0; border-radius: 0; }
  .sign_up{ padding: 20px; }

  .sign_up h3{ text-align: right; }

/*******************************************************
MEDIA QUERIES
********************************************************/

@media (max-width: 700px){

  h1{ font-size: 25px; }

  .main_navbar form{ display: none; }
  .hide_navbar{ width: 70%; }
  .search{ display: block; }

  .with_sidebar{ transform: translateX(70%); }

  .lv_infos{ width: 100%; position: static !important; background: none; padding: 10px; }
  .lv_infos h2{ font-size: 25px; color: #000; }
  .lv_infos p{ font-size: 20px; color: #000; }
  .lv_infos a{ margin-top: 0; }
  .lv_infos_content{ position: static; }

  .elmt_video{ width: 100%; margin-bottom: 0; }
  .elmt_video .v_infos{ margin-bottom: 0; }

  .video .blur a{ width: 30%; left: 35%; top: 30% !important; }

  .success_connect{ width: 80%; left: 10%; }

  .aff_video{  padding: 0; }
  .my_video{ width: 100%; }
  .my_video .v_infos h2{  width: 100%; padding: 10px; }
  .my_video .v_infos button{ display: none; }
  .my_video .fb-share-button{ display: block; margin: 0 auto; }
  .commentaires{ width: 100%; }
  .commentaires .form-control{ margin: 20px auto; width: 90%; }
  .commentaire{ width: 90%; padding: 5px; }
  .commentaire img{ width: 30px; height: 30px; border-radius: 30px; }
  .commentaire .c_infos{ padding-left: 10px; }
  .commentaires .alert{ width: 90%; margin: 20px auto 0 auto !important; }

  .elmt_abo{ width: 100% !important; }

  .profil{ padding: 20px; }
  .profil_pic img{ width: 100%; }
  .profil_infos{ margin-top: 20px; width: 100%; }
  .profil_infos h2{ border-top: 1px solid #585858; margin-top: 20px; }

  .achats{ padding: 10px; width: 90%; }

  .login_body{ background: none; color: #000; }
  .login_body .alert{ width: 80%; }
  .login_body h1, .login_body h2{ color: #000; }
  .sign{ width: 100%; }
  .sign_in .input-group input, .sign_up .input-group input{ color: #000; }
  .sign_in form, .sign_up form{ width: 90%; }
  .filter_black{ background: none; }

}