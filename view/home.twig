{% extends 'template.twig' %}
{% block title %} Accueil {% endblock %}
{% block content %}

  <div class="col-sm-12 col-md-12 col-lg-10 list_videos">
  <h1> Les dernières vidéos </h1>

  {% for v in videos %}

  <div class="elmt_video">
    <div class="card mb-4 shadow-sm">
      <div class="video"> 
      <iframe src="https://www.youtube.com/embed/{{ v.lien }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
      {% if (v.gratuite == NULL) %}
        <div class="blur"> <p> <i class="fas fa-lock"></i> Contenu payant </p> </div>
      {% endif %}
      </div>
      <div class="card-body">
        <h2 class="title"> {{ v.titre }} 
        <span class="badge badge-secondary" style="background:<?= $video->couleur; ?>">{{ v.theme }}</span> 
        </h2>
        <div>
          {% if v.gratuite == 1 %}
            <a role="button" class="btn btn-sm btn-show btn-success" href="#"><i class="fas fa-eye"></i>Voir</a>
          {% else %}
            <a role="button" class="btn btn-sm btn-show btn-primary" href="#"><i class="fas fa-euro-sign"></i>Acheter</a>
          {% endif %}
        </div>
        <div class="d-flex justify-content-between align-items-center infos">
          {% if v.gratuite == 1 %}
            <p class="text-muted free">Gratuite</p>
          {% else %}
            <p class="text-muted price">{{ v.prix }}€</p>
          {% endif %}
        </div>
      </div>
      </div>
  </div>

  {% endfor %}
  </div>

{% endblock %}
