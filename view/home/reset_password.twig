{% extends 'inc/head.twig' %}
{% block title %} Réinitialisation du mot de passe {% endblock %}
{% block main %}

<div class="confirm">

    <h1><i class="fas fa-video"></i>D<span class="violet">o</span>ntatune</h1>
    <h2> Plateforme de vidéos en ligne </h2>

    <h3> Réinitialisation du mot de passe </h3>

    {% if error_message is defined %} 

        <div class="alert alert-danger" role="alert">
        <i class="fas fa-info-circle"></i>{{ error_message }}
        </div>

    {% endif %}

    <p> Veuillez rentrer un nouveau mot de passe </p>
    <form method="post" action="reset_password">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-lock"></i></div>
            </div>
            <input type="password" class="form-control" id="pass" placeholder="Mot de passe" name="pass" required value="{{ value_pass_insc }}">
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
            <div class="input-group-text"><i class="fas fa-lock"></i></div>
            </div>
            <input type="password" class="form-control" id="pass2" placeholder="Confirmation" name="pass2" required value="{{ value_pass2_insc }}">
        </div>
        <button type="submit" class="btn btn-success">Valider</button>
    </form>

</div>

{% endblock %}