{% extends 'template.twig' %}
{% block title %} Mes achats {% endblock %}
{% block content %}

<div class="achats">

<h1> Vos achats </h1>

<p class="total"><B>Total : </B>EUR {{ total }}</p>
 
{% if nb_achats != 0 %}

{% for a in achats %}

    <div class="elmt_video">
        <div class="video"> 
            <img src="{{ BASEURL ~ a.miniature }}" alt="Miniature de la vidéo {{a.title}}">
        </div>
        <div class="v_infos">
            <div class="v_text">
                <h2> {{ a.titre }} </h2> 
            </div>
            <p class="text-muted price infos_achat">Prix d'achat : EUR {{ a.prix }}</p> 
            <p class="infos_achat"> <B>Achetée le</B> {{ a.date_achat | date("d/m/Y") }} </p>
            <a role="button" class="btn btn-success" href="{{BASEURL}}video/watch/{{a.id_video}}"> <i class="fas fa-video"></i> </a>
        </div>
    </div>

{% endfor %}

{% else %}

<div class="alert alert-danger"> Vous n'avez encore procédé à aucun achat </div>

{% endif %}

</div>

{% endblock %}
